<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- /** @author FedeBeron * @version 1.0 */ -->

<hibernate-mapping>
    <class name="com.eBolivar.domain.Banner" table="BANNERS">
	
          <id name="id" column="BN_ID" type="java.lang.Integer" >
         	<generator class="increment"/>
		  </id>
          <property name="nombre_principal"  column="BN_NOMBRE_PRINCIPAL"  type="java.lang.String" />
		  <property name="nombre_secundario"  column="BN_NOMBRE_SECUNDARIO"  type="java.lang.String" />
		  <property name="direccion_img"  column="BN_DIRECCION_IMG"  type="java.lang.String" />
		  <property name="observaciones"  column="BN_OBSERVACIONES"  type="java.lang.String" />
		  <property name="estado"  column="BN_ESTADO"  type="java.lang.String" />
    </class>
</hibernate-mapping>
